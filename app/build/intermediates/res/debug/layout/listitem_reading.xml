<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jessicaxu.ReadJiffy.app.ui.MainActivity$ContentFragment">

    <TextView
        android:id="@+id/bookNameText"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/readPercent"
        android:orientation="horizontal"
        android:layout_below="@+id/bookNameText"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/left"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/readPageText"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/of"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/totalPageText"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/comma"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/percentText"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/right"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

    <TextView
        android:id="@+id/authorText"
        android:layout_below="@+id/readPercent"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timerText"
        android:textColor="#2e52b4"
        android:textSize="18sp"
        android:text="@string/init_time"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/readPercent"
        android:layout_toLeftOf="@+id/delButton"
        android:layout_toStartOf="@+id/delButton" />

    <TextView
        android:id="@+id/totalTimeText"
        android:layout_toLeftOf="@+id/menuButton"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/delButton"
        android:src="@drawable/del"
        android:contentDescription="@string/del_description"
        android:background="@drawable/image_button_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_below="@id/delButton"
        android:contentDescription="@string/menu_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_overflow"
        android:background="@drawable/image_button_background"
        android:layout_width="10dp"
        android:layout_height="50dp"/>

</RelativeLayout><!-- From: file:/E:/00.code/00.android/ReadJiffy/app/src/main/res/layout/listitem_reading.xml -->