<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jessicaxu.ReadJiffy.app.ui.MainActivity$ContentFragment">

    <TextView
        android:id="@+id/bookNameText"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pageText"
        android:layout_below="@+id/bookNameText"
        android:text="@string/total_pages"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/totalPageText"
        android:layout_toRightOf="@+id/pageText"
        android:layout_below="@+id/bookNameText"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/authorText"
        android:layout_below="@+id/pageText"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/delButton"
        android:src="@drawable/del"
        android:contentDescription="@string/del_description"
        android:background="@drawable/image_button_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始读"
        android:id="@+id/startButton"
        android:layout_centerVertical="true"
        android:background="@drawable/image_button_background"
        android:layout_toLeftOf="@+id/delButton"
        android:layout_toStartOf="@+id/delButton" />

</RelativeLayout><!-- From: file:/E:/code/Android/ReadJiffy/app/src/main/res/layout/listitem_want.xml -->