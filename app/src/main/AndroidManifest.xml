<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="com.jessicaxu.ReadJiffy.app" >

    <uses-permission android:name="android.permission.GET_TASKS" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ReadJiffy" >
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".content.BookCP"
            android:exported="false"
            android:authorities="com.jessicaxu.ReadJiffy.app.content.bookcp" />

        <service
            android:enabled="true"
            android:name=".others.TimerService"
            android:permission="com.jessicaxu.ReadJiffy"/>

    </application>

</manifest>
